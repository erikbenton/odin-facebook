<div class="row">
  <aside class="col-md-4">
  	<section class="user_info">
  		<h1><%= @user.name %></h1>
  		
  		<% if @user == current_user %>
		  	<%= render 'post' %>
			<% end %>
	  	
	  	<%= render 'friends' %>
  	</section>
  </aside>
  <div class="col-md-8">
		<h3>Posts</h3>
		<% if @user.posts.any? %>
  		<ul class="posts">
  			<%= render @posts %>
  		</ul>
  	<% end %>
  </div>
</div>